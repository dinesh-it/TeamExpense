<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        
   <LinearLayout 
       android:id="@+id/filter_group"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical" >
    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" > 
    
    <EditText
        android:id="@+id/list_date_from"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="From Date"
        android:inputType="date" />
    
    <EditText
        android:id="@+id/list_date_to"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="To Date"
        android:inputType="date" />
    
    <TextView
        android:id="@+id/list_dummy_col"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:singleLine="true" />
    
    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" > 
    
    <AutoCompleteTextView
        android:id="@+id/list_name"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="Paid By"
        android:ems="10" />
    
    <AutoCompleteTextView
        android:id="@+id/list_spent"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="Paid For"
        android:ems="10" />
    
    <Button
        android:id="@+id/list_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_action_search"/>
    
    </TableRow>
    
    </LinearLayout>
    
    <HorizontalScrollView 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content" >  
    	 
    <ScrollView
    android:id="@+id/expense_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" />
    
    </HorizontalScrollView> 
</LinearLayout><!-- From: file:/home/dinesh/Office/Android/TeamExpense/app/src/main/res/layout/expense_view.xml -->