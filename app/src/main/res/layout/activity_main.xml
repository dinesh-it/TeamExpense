<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="463dp"
        android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Add New Expense:" />

        <include layout="@layout/modify_expense"/>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

    <Button
        android:id="@+id/button1"
        style="@style/MyButtonText"
        android:background="@drawable/green_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add" />

    <Button
        android:id="@+id/button2"
        style="@style/MyButtonText"
        android:background="@drawable/blue_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Expenses List" />

    <Button
        android:id="@+id/button3"
        style="@style/MyButtonText"
        android:background="@drawable/red_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear" />

    </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:id="@+id/status_layout">

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" >

        <EditText
        android:id="@+id/et_date_from"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:ems="10"
        android:inputType="date" />

        <TextView
        android:id="@+id/tv_to_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text=" to "
        android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
        android:id="@+id/et_date_to"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="left"
        android:inputType="date" />

    </TableRow>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TableLayout
        android:id="@+id/team_status_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </TableLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Medium Text"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TableLayout
        android:id="@+id/self_status_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </TableLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Medium Text"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TableLayout
        android:id="@+id/loan_status_table"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="wrap_content" >
    </TableLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Medium Text"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TableLayout
        android:id="@+id/item_status_table"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </TableLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Medium Text"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TableLayout
            android:id="@+id/mode_details_table"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </TableLayout>


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ItemWiseList">

            <view
                android:id="@+id/item_wise_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                class="android.support.v7.widget.RecyclerView"
                />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/p1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:padding="5dp"
                android:progressDrawable="@drawable/my_progress"
                />

        </RelativeLayout>

        <DatePicker
            android:id="@+id/datePicker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:layout_marginRight="20dp" />

</LinearLayout>

</ScrollView>